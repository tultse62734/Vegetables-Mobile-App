<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/lnl_root_store"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:weightSum="10"
        android:background="@drawable/radius_gray_hint"
        android:layout_marginRight="@dimen/dp16"
        android:layout_marginLeft="@dimen/dp16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/image_url_store"
                android:src="@drawable/ic_vegetables"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp80">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/dp20"
            android:background="@color/colorMidGrey"
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp80">
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp10"
            android:orientation="vertical"
            android:layout_weight="5.9"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_name_store"
                android:gravity="left"
                android:textSize="@dimen/sp18"
                android:textColor="@color/colorBlack"
                android:text="Store1"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txt_address_store"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="center"
                android:textSize="@dimen/sp13"
                android:textColor="@color/colorGreenDark"
                android:text="123 Quang Trung P2 Quận Gò Vấp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp5"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_right"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30">
            </ImageView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>