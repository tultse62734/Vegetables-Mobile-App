<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/dp10"
    android:background="@drawable/radius_5"
    android:layout_height="wrap_content"
    android:id="@+id/lnl_row_product_shop_cart">
<ImageView
    android:scaleType="fitXY"
    android:id="@+id/img_product_shopping"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp5"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_product_name_shopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGreenDark"
            android:text="Ao"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/txt_product_price_shopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"/>
        <TextView
            android:id="@+id/txt_product_quality_shopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng : 1"/>
    </LinearLayout>

</LinearLayout>